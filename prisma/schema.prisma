// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  phone     String   @unique
  password  String
  name      String
  posts     Post[]
  likes     Like[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Post {
  id          Int      @id @default(autoincrement())
  description String
  attachment  String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [authorId], references: [id])
  authorId    Int      @unique
  likes       Like[]
}

model Like {
  id        Int      @id @default(autoincrement())
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int      @unique
  user      User     @relation(fields: [likedId], references: [id])
  likedId   Int      @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
